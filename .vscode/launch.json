    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "-c",
                "config.yml",
                "-s",
                "HX_TEST_JP_"
            ]
        },
        {
            "name": "Python Debugger: app/backend/main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/backend/main.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "-c",
                "config.yml"
            ]
        }
    ]
}